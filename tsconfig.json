{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
